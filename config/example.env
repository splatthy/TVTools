# TradingView Configuration
TRADINGVIEW_SESSION_ID=your_session_id_here
TRADINGVIEW_USERNAME=your_username
TRADINGVIEW_PASSWORD=your_password

# Exchange Settings
DEFAULT_EXCHANGE=BINANCE

# Technical Analysis Settings
EMA_12_PERIOD=12
EMA_200_PERIOD=200

# VWAP Settings
VWAP_QUARTERLY_ENABLED=true
VWAP_YEARLY_ENABLED=true

# Support/Resistance Detection
SR_PROXIMITY_THRESHOLD=3.0
SR_MIN_STRENGTH=0.6

# Retracement Detection
RETRACEMENT_THRESHOLD=0.5
MACRO_TREND_WEIGHT=0.4

# Watchlist Settings
WATCHLIST_FILE=watchlist.json
MIN_CHANGE_PERCENT=3.0
EXCLUDE_LEVERAGED_TOKENS=true

# Exchange API Settings
BINANCE_API_TIMEOUT=10
BLOFIN_API_TIMEOUT=10

# Logging
LOG_LEVEL=INFO
LOG_FILE=tvtools.log